{
  "extends": "./config-typescript/react-library.json",
  "compilerOptions": {
    "lib": ["dom", "ES2015"],
    "types": ["vitest", "node"],
    "paths": {
      "@/lib/utils": ["./src/utils"],
      "@/lib/utils/*": ["./src/utils/*"],
      "@/components/*": ["./src/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/payload-types" : ["./src/payload-types"]

    }
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules", "**/*.mdx"]
}
